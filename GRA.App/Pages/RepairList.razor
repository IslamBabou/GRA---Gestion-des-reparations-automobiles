@page "/RepairList"
@layout SideBarLayout

@using GRA.App.Demos
<link href="_content/Syncfusion.Blazor.Themes/fluent.css" rel="stylesheet" />


<div class="col-lg-12 control-section">
    <div class="content-wrapper wow fadeInDown " style="margin:8%;">
        <div class=" row justify-content-center">
            <SfGrid DataSource="@GridData" Toolbar="@(new List<string>() { "Search" })" AllowPaging="true"  class="bg-white " style="opacity:0.95 ;border-radius:10px;">
                <GridColumns >
                    <GridColumn Field=@nameof(AppointmentDto.Id) IsPrimaryKey="true" HeaderText="Inventor Name" Width="150"></GridColumn>
                    <GridColumn Field=@nameof(AppointmentDto.CustomerId) HeaderText="Number of Patent Families" Width="150"></GridColumn>
                    <GridColumn Field=@nameof(AppointmentDto.DateAppointment) HeaderText="Country" Width="100"></GridColumn>
                    <GridColumn Field=@nameof(AppointmentDto.IsCompleted) HeaderText="Main Fields of Invention" Width="200"></GridColumn>
                </GridColumns>
            </SfGrid>
        </div>
    </div>
</div>
@code {
    [Inject]
    IAppointmentService appointmentService { get; set; }
    public IEnumerable<AppointmentDto>? GridData { get; set; }
    protected override async Task OnInitializedAsync()
    {
        GridData =  await appointmentService.GetAllAppointments();
    }
}