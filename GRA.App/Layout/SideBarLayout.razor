@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase

    <link href="_content/Syncfusion.Blazor.Themes/bootstrap5.css" rel="stylesheet" />
    <script src="https://cdn.syncfusion.com/blazor/20.2.40/syncfusion-blazor.min.js" type="text/javascript"></script>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4 auth">
            @* <AuthorizeView Roles="Manager"> *@
                <SearchComponent></SearchComponent>
            @* </AuthorizeView> *@
        </div>

        @Body
    </main>
</div>

<style>
    .page {
        display: flex;
        flex-direction: row;
        position: relative;

    }

    .sidebar {
        width: 250px;
        height: 100vh;
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
        position: sticky;
        top: 0;
    }

    main {
        flex: 1; /* Allows the main content to take up the remaining space */
    
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        display: flex;
        align-items: center;
        height: 3.5rem;
        justify-content: space-between;
        position: sticky;
        top: 0;
        z-index: 1; /* Ensures the top-row stays above other content */
    }

        .top-row ::deep a,
        .top-row ::deep .btn-link {
            white-space: nowrap;
            text-decoration: none;
            margin-left: 1.5rem;
        }

            .top-row ::deep a:hover,
            .top-row ::deep .btn-link:hover {
                text-decoration: underline;
            }

            .top-row ::deep a:first-child {
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .top-row.auth ::deep a:first-child {
            flex: 1;
            text-align: right;
            width: 0;
        }

    .top-row,
    article {
        padding-left: 2rem !important;
        padding-right: 1.5rem !important;
    }
</style>
